Zamina:

<TextInput>:
    font_size: "30sp"
    height: 50
    size_hint_y: None

<Label>:
    font_size: "20sp"



<Zamina>:
    tinput: tinput
    rtinput: rtinput
    orientation: 'vertical'
    padding: 10

    Label:
        font_size: "74sp"
        text: 'Sequences'
        bold: True

    BoxLayout:
        TextInput:
            id: tinput
            hint_text: "Enter Sequence"
            multiline: False
            focus: True
            on_text_validate: root.take_str(self.text)
            on_text: root.take_str(self.text)
        Button:
            text: 'Find Next'
            size_hint_y: None
            size_hint_x: None
            size: 100, 50
            on_press: root.take_str(tinput.text)
    Widget:
    Label:
        size_hint_y: None
        height: 30
        font_size: "20sp"
        text_size: self.size
        halign: "left"
        text: '  Result:'
    TextInput:
        id: rtinput
        focus: True
        font_size: "15sp"
        font_name: 'RobotoMono-Regular'
        size_hint_y: 1